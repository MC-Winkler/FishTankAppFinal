<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#00fff9">

    <TextView
        android:text="@string/pick_a_fishy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <RadioGroup
        android:id="@+id/fishGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/one_fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/yellowfish"
            android:onClick="onFishRadioButtonClicked"
            />

        <RadioButton
            android:id="@+id/two_fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/greenfish"
            android:onClick="onFishRadioButtonClicked"
            />

        <RadioButton
            android:id="@+id/orange_fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/orangefish"
            android:onClick="onFishRadioButtonClicked"
            />

        <RadioButton
            android:id="@+id/blue_fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/realbluefish"
            android:onClick="onFishRadioButtonClicked"
            />
    </RadioGroup>

    <TextView
        android:text="@string/pick_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RadioGroup
        android:id="@+id/backgroundGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

            <RadioButton
                android:id="@+id/skrunken_bikini_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/croppedbikinibottom"
                android:onClick="onBackgroundRadioButtonClicked"
                />

            <RadioButton
                android:id="@+id/skrunken_bikini_bottom_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/croppedbikinibottom2"
                android:onClick="onBackgroundRadioButtonClicked"
                />

            <RadioButton
                android:id="@+id/skrunken_little_mermaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/croppedlittlemermaid"
                android:onClick="onBackgroundRadioButtonClicked"
                />

            <RadioButton
                android:id="@+id/skrunken_little_mermaid_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/croppedlittlemermaid2"
                android:onClick="onBackgroundRadioButtonClicked"
                />

    </RadioGroup>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/start_button"
    android:onClick="onStartClick"
    android:layout_gravity="center"/>


</LinearLayout>
